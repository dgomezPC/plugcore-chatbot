{
  "name": "plugcore-chatbot",
  "version": "1.0.0",
  "description": "Chatbot inteligente con OpenAI Assistant para Plugcore CMS",
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:client proxy",
    "dev:api": "cd api && npm run dev",
    "dev:client": "cd client/customer && npm run dev",
    "proxy": "node proxy.js",
    "install:all": "npm install && cd api && npm install && cd ../client/customer && npm install"
  },
  "keywords": ["chatbot", "openai", "plugcore", "assistant"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
